{
  "manifest_version": 3,
  "name": "Job Hunter",
  "version": "1.0",
  "description": "A Chrome extension to help you hunt for jobs.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "downloads",
    "sessions"
  ],
  "host_permissions": [
    "https://www.seek.com.au/*",
    "https://www.linkedin.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.seek.com.au/*"],
      "js": ["seek.bundle.js"]
    },
    {
      "matches": ["https://www.linkedin.com/jobs/search/*"],
      "js": ["linkedin.bundle.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["answerGeneration.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.jpg",
      "48": "icon48.jpg",
      "128": "icon128.jpg"
    }
  },
  "icons": {
    "16": "icon16.jpg",
    "48": "icon48.jpg",
    "128": "icon128.jpg"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}